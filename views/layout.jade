doctype 5
html(lang="en")
  head
    title
      | CI Node Manager
    meta(name='charset', content='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/assets/css/bootstrap.css')
    link(rel='stylesheet', href='/assets/css/bootstrap-responsive.css')

    style
      body { 
        padding-top: 60px;
        padding-bottom: 40px;
      }

    script(src='/assets/js/jquery.min.js')
    script(src='/assets/js/bootstrap.js')
    block header

  body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          a(class='btn btn-navbar', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(class='brand', href='/') Node CI
          div.nav-collapse.collapse
            ul.nav
              li
                a(tabindex="-1", href="/list") List Sites
              li
                a(href="/git") Repo

              if (session.logged_in && session.user.github)
                li.dropdown
                  a(href='#', class='dropdown-toggle', data-toggle='dropdown') #{session.user.github.name || session.user.name}  <b class='caret'></b>
                  ul.dropdown-menu.hidden-phone
                    li
                      a(href='/account') Account
                    li
                      a(href='/logout') Logout
                    li.divider
                    li
                      a(href='/account/settings') Settings

              if (!session.logged_in)
                li.dropdown
                  a(href='/login') Login

    div.container
      block content

      hr

      footer
        p &copy whoever...




